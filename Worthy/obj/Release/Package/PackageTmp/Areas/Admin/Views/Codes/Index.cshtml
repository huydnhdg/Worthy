@model IEnumerable<Worthy.Models.Code>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1 class="card-title" style="font-weight:bold">Danh sách thông tin mã topup</h1>
        <br />
      
            <div>
                @Html.ActionLink("Tạo mã mới", "Create")
             
        </div>
       


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã TV</th>
                    <th>Giá tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Id</td>
                        <td>@item.Model_size</td>
                        <td>@item.Price_topup</td>

                        <td> @Html.ActionLink("Xem chi tiết", "Details", new { id = @item.Id })</td>
                        <td> @Html.ActionLink("Sửa mã", "Edit", new { id = @item.Id })</td>
                        <td> @Html.ActionLink("Xóa mã", "Delete", new { id = @item.Id })</td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
    <!-- /.card-body -->
</div>


