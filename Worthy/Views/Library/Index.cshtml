@model PagedList.IPagedList<Worthy.Models.Post>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .pagination > li > a {
        position: relative;
        float: left;
        padding: 16px 25px;
        margin-left: -1px;
        line-height: 1.428571429;
        text-decoration: none;
        border: 1px solid #ddd;
    }
</style>
<section class="space-ptb">
    <div class="container">
        <div class="row mt-5 mt-md-0">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="blog-post">
                        <div class="blog-post-image">
                            <img class="img-fluid" src="@item.Thumbnail" alt="" href="/tin-tuc/@item.Alt>
                        </div>
                        <div class="blog-post-content">
                            <div class="blog-post-info">
                                <div class="blog-post-author">
                                    <a href="#" class="btn btn-light-square text-white">@item.CategoryPost.Category_Name</a>
                                </div>
                                <div class="blog-post-date">
                                    <a href="#">@item.Create_date</a>
                                </div>
                            </div>
                            <div class="blog-post-details">
                                <h5 class="blog-post-title mb-3">
                                    <a href="/tin-tuc/@item.Alt">@item.Title</a>
                                </h5>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
        <div class="row justify-content-center mt-4 mt-md-5">
            <div class="col-lg-8 text-center">
                <nav aria-label="Page navigation example">
                    <div class="pagination justify-content-center">
                        @Html.PagedListPager(Model, page => Url.Action("Index",
                               new { page }))

                    </div>
                </nav>
            </div>
        </div>
    </div>
</section>